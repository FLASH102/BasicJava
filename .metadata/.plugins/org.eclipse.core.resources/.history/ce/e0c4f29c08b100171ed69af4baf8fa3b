
public class Application {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Person p1 = new Person("Momoji", 13);
		boolean canDrive = p1.canDrive();

		if (canDrive) {
			System.out
					.println(p1.name + ", you cannot drive. Hahahaah...lose- i mean most awesome person in the world.");
		} else {
			System.out.println(p1.name + ", you can drive!");
		}

		Person p2 = new Person("Momojo", 66);
		canDrive = p2.canDrive();

		if (canDrive) {
			System.out.println(p2.name + ", you can drive!");
		} else {
			System.out.println(p2.name + ", you cannot drive. Hahahaah...loser gaaru.");
		}

	}

}
