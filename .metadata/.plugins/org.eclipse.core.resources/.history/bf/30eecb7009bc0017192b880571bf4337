
public class Student {
	String name;
	int age;

	Student(String name) {
		this.name = name;
		// Constructor is a special method that has the class name as the method
		// name, and doesn't
		// have a return type (void, int, etc.)
	}

	Student(String name, int age) {
		this.name = name;
		this.age = age;
	}

	void readBook(String bookName) {
		checkOut(bookName);
		readingBook(bookName);
		returnBook(bookName);
	}

	void checkOut(String bookName) {
		System.out.println("Checking out " + bookName + ".");
	}

	void readingBook(String bookName) {
		System.out.println("Reading " + bookName + ".");
	}

	void returnBook(String bookName) {
		System.out.println("Returning " + bookName + ".");
	}

}
